<div class="row">
  <div class="col-sm-4 col-md-offset-3">
    <%= render 'shared/header', header: "Create a new status" %>
    <%= render 'shared/errors', obj: @status %>
  </div>
</div>
<div class="row">
  <div class="col-sm-4 col-sm-offset-3">
    <div class="form-group">
      <%= form_for @status do |f| %>
	<%= f.label :body %>
	<br />
	<%= f.text_area :body %>
	<br />
	<%= f.submit "Create Status" %>
      <% end %>
    </div>
  </div>
</div>
